<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeGarb" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_grey</item>
        <item name="colorPrimaryVariant">@color/main_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_grey_second</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/main_grey</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/main_grey</item>

        <item name="android:windowFullscreen">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>